// Inspired by Catnap
{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "small",
        "padding": {
            "top": 1
        }
    },
    "display": {
        "separator": " "
    },
    "modules": [
        {
            "key": "╭───────────╮",
            "type": "custom"
        },
        {
            "type": "command",
            "text": "bash /home/${USER}/.config/fastfetch/os-age.sh",
            "key": "│ {#33} age     {#keys}│"
        },
        {
            "key": "│ {#33}󰅐 uptime  {#keys}│",
            "type": "uptime"
        },
        {
            "key": "│ {#34}{icon} distro  {#keys}│",
            "type": "os"
        },
        {
            "key": "│ {#35} kernel  {#keys}│",
            "type": "kernel"
        },
        {
            "key": "│ {#36}󰇄 desktop {#keys}│",
            "type": "de"
        },
        {
            "key": "│ {#36}󰇄 wm      {#keys}│",
            "type": "wm"
        },
        {
            "key": "│ {#31} term    {#keys}│",
            "type": "terminal"
        },
        {
            "key": "│ {#32} shell   {#keys}│",
            "type": "shell"
        },
        {
            "key": "│ {#33}󰍛 cpu     {#keys}│",
            "type": "cpu",
            "showPeCoreCount": true
        },
        {
            "key": "│ {#33}󰍛 gpu     {#keys}│",
            "type": "gpu"
        },
        {
            "key": "│ {#34}󰉉 root    {#keys}│",
            "type": "disk",
            "folders": "/"
        },
        {
            "key": "│ {#34}󰉉 home    {#keys}│",
            "type": "disk",
            "folders": "/home"
        },
        {
            "key": "│ {#34}󰉉 dist    {#keys}│",
            "type": "disk",
            "folders": "/var/cache/distfiles"
        },
        {
            "key": "│ {#34}󰉉 tbld    {#keys}│",
            "type": "disk",
            "folders": "/var/tmp/portage"
        },
        {
            "key": "│ {#35} memory  {#keys}│",
            "type": "memory"
        },
        {
            "type": "swap",
            "key": "│ {#35} zswap   {#keys}│"
        },
        {
            "key": "├───────────┤",
            "type": "custom"
        },
        {
            "key": "│ {#39} colors  {#keys}│",
            "type": "colors",
            "symbol": "circle"
        },
        {
            "key": "╰───────────╯",
            "type": "custom"
        }
    ]
}