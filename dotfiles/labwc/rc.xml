<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <theme>
    <name></name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <keyboard>
    <default />
    <!-- Use a different terminal emulator -->
    <keybind key="W-Return">
      <action name="Execute" command="kitty" />
    </keybind>
    <keybind key="W-d">
      <action name="Execute" command="tofi-drun" />
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None" />
    </keybind>
    <!-- close a window -->
    <keybind key="W-q">
      <action name="close" />
    </keybind>
    <!-- kill a window -->
    <keybind key="W-S-q">
      <action name="kill" />
    </keybind>
    <!-- kill a window -->
    <keybind key="W-S-q">
      <action name="kill" />
    </keybind>
  </keyboard>

<labwc>
    <keyboard_repeatrate>90</keyboard_repeatrate>
    <keyboard_repeatdelay>155</keyboard_repeatdelay>
</labwc>

  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
    <!-- Resize with Mod + right click -->
    <context name="Frame">
      <mousebind button="W-Right" action="Drag">
        <action name="resize" />
      </mousebind>
    </context>
    <!-- drag windows -->
    <context name="Client">
      <mousebind button="W-Left" action="Drag">
        <action name="Move" />
      </mousebind>
    </context>
    <context name="Titlebar">
      <mousebind button="W-Left" action="Drag">
        <action name="Move" />
      </mousebind>
    </context>
  </mouse>

<libinput>
  <category name="non-touch">
    <option name="accelProfile" value="flat" />
  </category>
</libinput>

</labwc_config>
